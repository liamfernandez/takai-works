
<style>
#clickme {
    position: relative;
    top: 10px;
    left: 10px;
    padding: 10px;
    background-color: #ccc;
    border: none;
    cursor: pointer;
}
#hiddencontent {
    display: none;
    padding: 10px;
    background-color: #f5f5f5;
    margin-top: 50px;
}
#hiddencontent.show {
    display: block;
}
</style>
<button id="clickme">Click me to show content</button>
<div id="hiddencontent">Hello</div>
<script>
const clickme = document.querySelector('#clickme');
const hiddencontent = document.querySelector('#hiddencontent');
clickme.addEventListener('click', function() {
    hiddencontent.classList.toggle('show');
});
</script>